---
// This is the master layout for all your blog posts.
// The 'frontmatter' prop contains the metadata from your Markdown file.
const { frontmatter } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{frontmatter.title}</title>
		<style>
			/* Simple, clean styling for a blog */
			body { font-family: system-ui, sans-serif; line-height: 1.6; max-width: 800px; margin: 2rem auto; padding: 0 1rem; }
			h1 { font-size: 2.5rem; }
			a { color: #007acc; text-decoration: none; }
			a:hover { text-decoration: underline; }
			.post-meta { color: #666; }
		</style>
	</head>
	<body>
		<header>
			<a href="/">‚Üê Go Back Home</a>
		</header>
		<main>
			<article>
				<h1>{frontmatter.title}</h1>
				<p class="post-meta">Published on: {frontmatter.pubDate.slice(0, 10)}</p>
				<p><em>{frontmatter.description}</em></p>
				<hr>
				<!-- This is where the content of your Markdown file will be rendered -->
				<slot />
			</article>
		</main>
	</body>
</html>
